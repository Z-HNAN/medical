package cn.edu.hdu.zhn.medical.mgrsite.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import cn.edu.hdu.zhn.medical.base.service.IComDeptService;
import cn.edu.hdu.zhn.medical.mgrsite.anno.RequiredLogin;

@Controller
public class MedicalRoomController {
	
	@Autowired
	private IComDeptService comDeptService;
	
	/**
	 * 医务室管理界面
	 * @return
	 */
	@RequestMapping("medicalList")
	@RequiredLogin
	public String medicalList(Model model) {
		model.addAttribute("coms", this.comDeptService.listCom());
		return "com/medical_list";
	}

}
