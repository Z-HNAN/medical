package cn.edu.hdu.zhn.medical.base.mapper;

import cn.edu.hdu.zhn.medical.base.domain.ComDept;
import java.util.List;

public interface ComDeptMapper {
    int deleteByPrimaryKey(Long id);

    int insert(ComDept record);

    ComDept selectByPrimaryKey(Long id);

    int updateByPrimaryKey(ComDept record);

    /**
     * 根据 comDeptType 查询符合条件的部门数量
     * @param comDeptType
     * @return
     */
	int getCountByComDeptType(int comDeptType);

	/**
	 * 根据所需类型返回所有的 公司或部门
	 * @param typeCom
	 * @return
	 */
	List<ComDept> listComOrDeptByType(int typeCom);
}