<mapper namespace="cn.edu.hdu.zhn.medical.base.mapper.MedicalRoomMapper">
  <resultMap id="BaseResultMap" type="cn.edu.hdu.zhn.medical.base.domain.MedicalRoom">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="budget_amount" jdbcType="DECIMAL" property="budgetAmount" />
    <result column="use_amount" jdbcType="DECIMAL" property="useAmount" />
    
    <!-- 额外SQL查询com所属公司信息 -->
    <collection property="com" column="com_id" 
    ofType="cn.edu.hdu.zhn.medical.base.domain.ComDept" select="cn.edu.hdu.zhn.medical.base.mapper.ComDeptMapper.selectComByParentId" />
    
    <!-- 内联映射查询principal信息 -->
    <association columnPrefix="pr_" javaType="cn.edu.hdu.zhn.medical.base.domain.Logininfo" property="principal" >
    	<id column="id" property="id" />
    	<result column="username" property="username" />
    </association>
    
  </resultMap>
  
  <delete id="deleteByPrimaryKey" >
    delete from `medical_room`
    where id = #{id,jdbcType=BIGINT}
  </delete>
  
  <insert id="insert" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
    insert into `medical_room` (principal_id, budget_amount, use_amount, 
      com_id)
    values (#{principalId,jdbcType=BIGINT}, #{budgetAmount,jdbcType=DECIMAL}, #{useAmount,jdbcType=DECIMAL}, 
      #{comId,jdbcType=BIGINT})
  </insert>
  <update id="updateByPrimaryKey" parameterType="cn.edu.hdu.zhn.medical.base.domain.MedicalRoom">
    update `medical_room`
    set principal_id = #{principalId,jdbcType=BIGINT},
      budget_amount = #{budgetAmount,jdbcType=DECIMAL},
      use_amount = #{useAmount,jdbcType=DECIMAL},
      com_id = #{comId,jdbcType=BIGINT}
    where id = #{id,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select id, principal_id, budget_amount, use_amount, com_id
    from `medical_room`
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, principal_id, budget_amount, use_amount, com_id
    from `medical_room`
  </select>
